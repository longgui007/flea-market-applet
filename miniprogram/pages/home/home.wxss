.UCenter-bg {
  background-image: url(https://636c-cloud1-2g294lom8a1e168d-1307914651.tcb.qcloud.la/bg-image/index-bg2.webp?sign=66909274dda1b24b6a55da4b8f346993&t=1646662695);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}


.bar-wrapper{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.hline{
  margin-bottom: 120rpx;
}